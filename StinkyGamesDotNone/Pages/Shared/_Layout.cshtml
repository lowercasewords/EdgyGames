    <header>
        <ul>
            <li>
                <span>Test Web Header</span>
            </li>
            <li>
                <span>another message</span>
            </li>
            <li>
                <a href="#">
                    <span>test text</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <img id="header-profile-pic" src="/Users/arturagalarian/Desktop/Images/pexels-photo-1061640.jpeg" alt="Profile">
                </a>
            </li>
        </ul>
    </header>
    <main>
        @RenderBody()
    </main>
        <footer>
            <span>footer</span>
        </footer>
</body>
</html>